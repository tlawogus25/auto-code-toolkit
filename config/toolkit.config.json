{
  "labels": {
    "run": "automation:run",
    "autoMerge": "automation:auto-merge",
    "continue": "automation:continue",
    "highCost": "automation:high-cost",
    "complete": "automation:complete"
  },
  "plugins": [
    "./packages/plugins/basic-tokens",
    "./packages/plugins/crawl",
    "./packages/plugins/self-heal",
    "./packages/plugins/cost",
    "./packages/plugins/hybrid-merge"
  ],
  "tools": {
    "openai": {
      "default": "gpt-4o-mini",
      "heavy": "gpt-4o",
      "max_output_tokens": 16000,
      "preset": "default"
    },
    "gemini": {
      "default": "gemini-2.5-flash",
      "heavy": "gemini-2.5-pro",
      "preset": "default"
    },
    "claude": {
      "cli": "claude",
      "permission_mode": "acceptEdits",
      "allowed_tools": ["Read", "Bash"],
      "default": "claude-3-haiku-latest",
      "heavy": "claude-3.5-sonnet-latest",
      "preset": "default"
    },
    "cursor": {
      "cli": "cursor-agent",
      "force": false
    }
  },
  "policy": {
    "forbidden_globs": [
      "^\\.env",
      "^secrets/",
      "^\\.git/",
      "^packages/(?!core/|plugins/)",
      "^\\.github/auto/"
    ],
    "allowed_globs": [
      "^app/",
      "^src/",
      "^docs/",
      "^README\\.md$",
      "^apps/",
      "^services/"
    ],
    "plan_only_threshold_chars": 8000,
    "hard_stop_chars_without_high_cost_label": 20000
  },
  "pipeline": {
    "commands": {
      "lint_fix": "npm run lint --if-present || true",
      "test": "npm test --if-present",
      "build": "npm run build --if-present"
    }
  },
  "providers": {
    "anthropic": { "plan": "free" },
    "cursor": { "plan": "free" }
  }
}
