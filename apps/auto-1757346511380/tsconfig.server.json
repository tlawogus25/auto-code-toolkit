{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "./dist/server",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/server/**/*", "src/types.ts", "src/gameLogic.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "src/components/**", "src/main.tsx", "src/App.tsx", "src/gameStore.ts", "src/index.css"]
}